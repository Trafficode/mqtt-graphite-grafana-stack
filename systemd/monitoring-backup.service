[Unit]
Description=MQTT-Graphite-Grafana Database Backup
Documentation=https://github.com/Trafficode/mqtt-graphite-grafana-stack
After=network.target docker.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/home/kku/workspace/mqtt-graphite-grafana-stack
ExecStart=/home/kku/workspace/mqtt-graphite-grafana-stack/scripts/backup-databases.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=monitoring-backup

# Timeout after 30 minutes
TimeoutStartSec=1800

[Install]
WantedBy=multi-user.target
